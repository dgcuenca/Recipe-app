<section class='general_shopping_list flex_column'>
<h1>General Shopping List</h1>
<br/>
  <% if @foods.length == 0 %>
    <h2>There are no missing ingredients that must be purchased</h2>
  <% else %>
    <div class="general-list-header">
      <h3>Amount of ingredients need to buy: <%= @missing_ingredients.length %></h3>
      <h3>Total value of foods neded: $ <%= @total_price %> </h3>
    </div>
    <table class="table">
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
        </tr>
      </thead>
      <tbody>
        <% @missing_ingredients.each do |ingredient| %>
          <%= render 'list', ingredient: ingredient %>
        <% end %>
      </tbody>
  <% end %>
</section>