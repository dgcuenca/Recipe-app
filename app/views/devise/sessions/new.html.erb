<section class='sign_in flex-items'>
  <div class="signin__wrapper">
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "flex-items" }) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email" %>
      </div>
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password" %>
      </div>
      <br/>
      <% if devise_mapping.rememberable? %>
        <div class="field-check remember__me">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <br/>
      <div class="actions action__btn">
        <%= f.submit "Log in", class: "button" %>
      </div>
    <% end %>
    <div class="other__links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
